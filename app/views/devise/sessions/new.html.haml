- @title = 'Sign in'

= form_for(resource, :url => session_path(resource_name)) do |f|
  %fieldset
    %ol
      %li
        = f.label :email
        = f.text_field :email
      %li
        = f.label :password
        = f.password_field :password

      - if devise_mapping.rememberable?
        %li
          = f.check_box :remember_me 
          Remember me

  = f.submit "Sign in"
  = link_to "I forgot my password", new_password_path(resource_name) if devise_mapping.recoverable?

%br
- if devise_mapping.registerable? 
  = link_to "I haven't signed up", new_registration_path(resource_name)

= render :partial => "devise/shared/links"
