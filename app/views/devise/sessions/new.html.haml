- title 'Sign in'

= form_for(resource, :url => session_path(resource_name)) do |f|
  %fieldset
    %ol
      %li
        = f.label :email
        = f.text_field :email
      %li
        = f.label :password
        = f.password_field :password

      - if devise_mapping.rememberable?
        %li
          = f.check_box :remember_me 
          Remember me

  = f.submit "Sign in"

%br 
Problems logging in?
%br

- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "I need to sign up", new_registration_path(resource_name)
  %br

- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to "I forgot my password", new_password_path(resource_name)
  %br

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "I need to confirm my email address", new_confirmation_path(resource_name)
  %br

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "I need to unlock my account", new_unlock_path(resource_name)
  %br