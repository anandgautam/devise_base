- title 'Sign up'

= form_for(resource, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %fieldset
    %ol
      %li
        = f.label :email
        = f.text_field :email
      %li
        = f.label :password
        = f.password_field :password
      %li
        = f.label :password_confirmation
        = f.password_field :password_confirmation
      
  = f.submit "Sign up"